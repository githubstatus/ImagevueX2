									<a href="<?php echo (t($link)); ?>" <?php echo (empty($target) ? '' : "target=\"$target\"") ?> title="<?php echo strip_tags(t($item->description)); ?>" >

									<table>
										<td height="<?php echo $maxFolderHeight + 10; ?>">

